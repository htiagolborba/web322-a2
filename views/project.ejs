<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= project.title %> - Climate Solutions</title>
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <%- include('partials/navbar') %>
  
  <div class="container mx-auto px-4 py-8">

    <!-- hero section -->
    <div class="hero bg-base-200 rounded-lg mb-8">
      <div class="hero-content text-center">
        <div class="max-w-2xl">
          <h1 class="text-5xl font-bold"><%= project.title %></h1>
          <p class="py-6">Below you will find detailed info about my project: <%= project.title %></p>
        </div>
      </div>
    </div>

    <!-- project details:  -->
    <div class="card bg-base-100 shadow-xl mb-8">
      <figure>
        <img src="<%= project.feature_img_url %>" alt="<%= project.title %>" class="w-full max-h-96 object-cover">
      </figure>
      <div class="card-body">
        <h2 class="card-title text-3xl mb-4">Overview</h2>
        
        <div class="mb-4">
          <h3 class="text-xl font-bold mb-2">Introduction</h3>
          <p class="text-lg"><%= project.intro_short %></p>
        </div>

        <div class="mb-4">
          <h3 class="text-xl font-bold mb-2">Impact</h3>
          <p class="text-lg"><%= project.impact %></p>
        </div>

        <div class="mb-4">
          <h3 class="text-xl font-bold mb-2">Learn More</h3>
          <a href="<%= project.original_source_url %>" target="_blank" class="link link-primary">
            Visit Original Source
          </a>
        </div>

        <!-- quote section -->
        <div class="divider"></div>
        <div class="mb-4">
          <h3 class="text-xl font-bold mb-2">Inspirational Quote</h3>
          <div id="quote-container" class="bg-base-200 p-4 rounded-lg">
            <p id="quote-text" class="italic text-lg mb-2">Loading quote...</p>
            <p id="quote-author" class="text-right font-semibold">- Author</p>
          </div>
        </div>


        <!-- back button -->

        <div class="card-actions justify-start mt-4">
          <a href="#" onclick="history.back(); return false;" class="btn btn-outline">
            ‚Üê Back
          </a>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      // Fetch a random quote from the API
      fetch('https://dummyjson.com/quotes/random')
        .then(response => response.json())
        .then(data => {
          document.getElementById('quote-text').textContent = `"${data.quote}"`;
          document.getElementById('quote-author').textContent = `- ${data.author}`;
        })
        .catch(error => {
          document.getElementById('quote-text').textContent = 'Unable to load quote at this time.';
          document.getElementById('quote-author').textContent = '';
          console.error('Error fetching quote:', error);
        });
    });
  </script>
</body>
</html>



